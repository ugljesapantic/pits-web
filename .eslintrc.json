{
    "extends": [
        "airbnb"
      ],
      "plugins": [
        "react"
      ],
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "parser": "babel-eslint",
      "rules": {
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [".js", ".jsx"]
          }
        ],
        "react/prop-types": 0,
        "no-underscore-dangle": 0,
        "import/imports-first": ["error", "absolute-first"],
        "import/newline-after-import": "error",
        "import/prefer-default-export": 0
      },
      "globals": {
        "window": true,
        "document": true,
        "localStorage": true,
        "FormData": true,
        "FileReader": true,
        "Blob": true,
        "navigator": true,
        "MediaRecorder": true,
        "Audio": true
      }
}